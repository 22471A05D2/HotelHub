<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bd"
    android:paddingStart="25dp"

    android:orientation="vertical"
    android:paddingEnd="25dp"

    tools:context=".MainActivity7">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >





    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:paddingRight="30dp"
        android:text="Select your destination"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">


        <ImageView
         android:layout_height="170dp"
            android:layout_width="170dp"
            android:layout_row="0"
            android:layout_column="0"

            android:src="@drawable/hyd" />

                <TextView
                    android:id="@+id/one"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                   android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="100dp"
                    android:backgroundTint="@color/black"
                    android:text="Hyderabad"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#FFFFFF">

                <ImageView

                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_row="2"
                    android:layout_column="0"

                    android:src="@drawable/koch" />

                <TextView
            android:id="@+id/three"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
                    android:textSize="20sp"
            android:layout_marginLeft="100dp"
                    android:textStyle="bold"
         android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:textColor="@color/black"
            android:text="Kochi" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#FFFFFF">

        <ImageView

            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_row="4"

            android:layout_column="0"

            android:src="@drawable/chennai"/>

        <TextView
            android:id="@+id/five"
            android:layout_width="131dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"


            android:textColor="@color/black"
            android:text="Chennai" />
            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginTop="0dp"
                app:cardBackgroundColor="#FFFFFF">
                <ImageView

                    android:layout_width="170dp"
                    android:layout_height="170dp"


                    android:src="@drawable/tiru" />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:layout_marginLeft="100dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:text="Tirupathi"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#FFFFFF">

                <ImageView

                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_row="2"
                    android:layout_column="1"



                    android:src="@drawable/beng" />

                <TextView
                    android:id="@+id/four"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"

                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:text="Banglore" />
            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>


    </LinearLayout>